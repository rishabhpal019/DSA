class Solution:
    def flatten(self, root: Optional[TreeNode]) -> None:
        self.q = []
        def preorder (node):
            if not node:
                return
            self.q.append(node)
            preorder(node.left)
            preorder(node.right)

        preorder(root)
        if self.q:
            self.q.pop(0) 
        while self.q:
            root.right = self.q.pop(0)
            root.left = None
            root = root.right
